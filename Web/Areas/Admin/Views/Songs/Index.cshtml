@model IEnumerable<Domain.Models.Song>
@{
    ViewBag.Title = "Songs list";
}
 
<a class="cross-fade" href="/admin">Back</a>
<a class="cross-fade" href="/admin/songs/create">Add audio</a>
 
<table class="admin_table">
    <tr><th>Name</th><th>Album</th><th>Artist</th><th>Tags</th><th>Actions</th></tr>
    @foreach (var song in Model)
    {
        <tr>
            <td>@song.Name</td>
            <td>
                @song.Album.Name
            </td>
            <td>
                @song.Album.Artist.Name
            </td>
            <td>
                <div style="height: 20px; width: 100px; overflow-y: auto; overflow-x: hidden">
                    <table>
                        @foreach (var tag in song.Tags)
                        {
                            @tag.Name
                            <break/>;
                        }
                    </table>
                </div>
            </td>
            <td>
                <form action="/admin/songs/delete?id=@song.Id" method="post">
                    <a class="draw-outline draw-outline--tandem" href="/admin/songs/edit?id=@song.Id">Edit</a>
                    <button class="draw-outline draw-outline--tandem" type="submit" 
                            style="background: rgba(0,0,0,0); font-size: 16px;">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>