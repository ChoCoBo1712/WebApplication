@model Web.Areas.Admin.ViewModels.AlbumViewModel
@{
    ViewBag.Title = "Adding album";
}

<form action="/admin/albums/create" enctype="multipart/form-data" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Image" class="control-label">Image</label>
        <input type="file" asp-for="Image" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ArtistId" class="control-label">Artist</label>
        <select asp-for="ArtistId" asp-items="@(new SelectList(ViewBag.Artists, "Id",dataTextField: "Name"))" class="form-control"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-outline-secondary" />
    </div>
</form>