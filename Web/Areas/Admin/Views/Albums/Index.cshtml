@model IEnumerable<Domain.Models.Album>
@{
    ViewBag.Title = "Albums list";
}
 
<a class="cross-fade" href="/admin">Back</a>
<a class="cross-fade" href="/admin/albums/create">Add album</a>
 
<table class="admin_table">
    <tr><th>Name</th><th>Image</th><th>Artist</th><th>Actions</th></tr>
    @foreach (var album in Model)
    {
        <tr>
            <td>@album.Name</td>
            <td>
                <img src="~/img/albums/@album.ImagePath" width="60" height="60">
            </td>
            <td>
                @album.Artist.Name
            </td>
            <td>
                <form action="/admin/albums/delete?id=@album.Id" method="post">
                    <a class="draw-outline draw-outline--tandem" href="/admin/albums/edit?id=@album.Id">Edit</a>
                    <button class="draw-outline draw-outline--tandem" type="submit" 
                            style="background: rgba(0,0,0,0); font-size: 16px;">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>